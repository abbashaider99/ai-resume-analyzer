{
  "buildCommand": "npm run build",
  "outputDirectory": "build",
  "framework": "remix",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "env": {
    "VITE_API_BASE_URL": "https://api.abbaslogic.com/api"
  },
  "routes": [
    {
      "src": "/admin/(.*)",
      "dest": "/admin/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
